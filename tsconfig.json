{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "declaration": true,
    "preserveConstEnums": true,
    "lib": ["es6", "dom"],
    "alwaysStrict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "dist/index.d.ts", "types"]
  },
}
